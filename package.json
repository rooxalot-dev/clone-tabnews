{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Clone do projeto Tabnews",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && next dev",
    "docker:up": "docker compose -f ./infra/compose.yaml up -d --force-recreate --renew-anon-volumes",
    "docker:down": "docker compose -f ./infra/compose.yaml down",
    "pg:migration:create": "node-pg-migrate create -m infra/database/postgres/migrations -j ts",
    "pg:migration:up": "node-pg-migrate up -m infra/database/postgres/migrations --tsconfig ./tsconfig.json --envPath .env.development",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.4.1",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.11.10",
    "@types/react": "18.3.4",
    "esbuild": "^0.24.0",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.6.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "5.5.4"
  }
}
